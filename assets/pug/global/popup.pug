// Header popup Mobile
.header_popup--window.burger
	.header_popup_bg.burger_closer
	.header_popup--main
		.header_logo
			a(href="#")  
				img(src="i/logo.svg")
		.header_close.burger_closer 
			button(type="button")
				+icon('close') 
		ul.header_popup 
			li.header_popup--item 
				a(href="#").header_popup--link Главная
			li.header_popup--item  
				a(href="#").header_popup--link О центре
				ul.header_submenu--popup
					each item in ['Element 1']
						- for(i = 0; i < 5; ++i)
							li 
								a(href="#")=item 
			li.header_popup--item  
				a(href="#").header_popup--link Услуги
				ul.header_submenu--popup
					each item in ['Element 1']
						- for(i = 0; i < 5; ++i)
							li 
								a(href="#")=item
			li.header_popup--item  
				a(href="#").header_popup--link Специалисты
				ul.header_submenu--popup
					each item in ['Element 1']
						- for(i = 0; i < 5; ++i)
							li 
								a(href="#")=item
			li.header_popup--item  
				a(href="#").header_popup--link Пациенту
				ul.header_submenu--popup
					each item in ['Element 1']
						- for(i = 0; i < 5; ++i)
							li 
								a(href="#")=item
			li.header_popup--item  
				a(href="#").header_popup--link Статьи
			li.header_popup--item  
				a(href="#").header_popup--link Контакты
				ul.header_submenu--popup
					each item in ['Element 1']
						- for(i = 0; i < 5; ++i)
							li 
								a(href="#")=item
		.popup_burger_address 
			.header_contact_w
				.header_city_single
					.header_contact_icon 
						+icon('map')
					.header_address г. Симферополь, ул. Володарского, 32 
				ul.header_list
					-for(i = 0; i < 4; i++)
						li.header_city_item
							.header_address!=`г. Симферополь, ул. Володарского, 32${i}`
		ul.header_popup--info
			li 
				a(href="#")
					p Телефон
					span +7 (978)142-02-42
			li 
				a(href="#")
					p Email:
					span info@reacenter-crimea.ru

// request form

.req_form 
	.req_form_bg.req_remove 
	.req_form_main
		.req_form_close.req_remove 
			button(type='button')
				+icon('close')
		.req_form_action 
			form(action="")
				.req_input.req_input_textarea
					label(for="request_field") Вопрос 
					textarea(name="request" placeholder="Ваш вопрос" id="request_field")
				.req_input.req_input_select  
					label(for="request_category") Раздел
					select(name="request_category" id="request_category")
						-for(i = 0; i < 5; i++)
							option(value="Выберите раздел") Выберите раздел
				.request_checkbox.global_form--check 
					input(type="checkbox", id="req_checkbox")
					label(for="req_checkbox")
						p Cогласен на обработку персональных данных
				.req_submit.forms_submit
					button(type="submit") Отправить

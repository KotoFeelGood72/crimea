mixin navigation(data)
	nav.header_nav_w
		ul.header_nav
			-
				var menu = [
					{
						title: 'Главная',
						submenu: false,
					},
					{
						title: 'Услуги',
						submenu: true,
					},
					{
						title: 'Специалисты',
						submenu: false,
					},
					{
						title: 'Пациенту',
						submenu: true,
					},
					{
						title: 'Фонд',
						submenu: true,
					},
					{
						title: 'О центре',
						submenu: true,
					},
					{
						title: 'Отзывы',
						submenu: false,
					},
					{
						title: 'Новости',
						submenu: false,
					},
					{
						title: 'Контакты',
						submenu: false,
					},
				]
			each item in menu
				if item.submenu != true
					li.header_nav--item 
						a(href="#").header_nav--link=item.title
				else
					li.header_nav--item  
						a(href="#").header_nav--link=item.title
						ul.header_submenu
							each item in ['Element 1']
								- for(i = 0; i < 5; ++i)
									li 
										a(href="#")=item
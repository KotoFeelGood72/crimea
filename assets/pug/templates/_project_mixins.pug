// Хлебные крошки

mixin bread(items, last)
	section.bread 
		.section_in 
			.bread_main 
				ul.bread_list 
					each item in items
						li 
							if (items.length === 1)
								a(href="#")=item
							else
								a(href="#")=item
					if last
						li.breadcrumb__item
							p=last
					else


